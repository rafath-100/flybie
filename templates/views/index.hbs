<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="../css/bootstrap.min.css">
  <link rel="stylesheet" href="css/style.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

  <!-- jQuery library -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

  <!-- Popper JS -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>

  <!-- Latest compiled JavaScript -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>


  <title>Airline_Ticketing</title>
</head>

<body>

  {{>navbar}}

  {{!-- hero section start--}}
  <div class="container-fluid mt-5">
    <div class="row">
      <div class="col-md-10 col-12 mx-auto">
        <div class="row">


          <form action="/" class="form-group" method="POST">
            <!--form-->
            <h1 class="text-center">Airline Booking Form</h1>

            <div id="form">
              <!--form-->
              <h3 class="text-white">Booking Details</h3>

              <div id="input">
                <!--input-->
                {{!-- <input type="text" id="input-group" placeholder="From"> --}}
                <select class="sel1" id="input-group" style="background: black" name="from">
                  <option value="">From</option>
                  <option value="Hyderabad">Hyderabad</option>
                </select>

                {{!-- <input type="text" id="input-group" placeholder="To"> --}}
                <select class="sel2" id="input-group" style="background: black" name="to">
                  <option value="">To</option>
                  <option value="Saudi Arabia">Saudi Arabia</option>
                  <option value="Turkey">Turkey</option>
                  <option value="Germany">Germany</option>
                  <option value="Mexico">Mexico</option>
                  <option value="South Africa">South Africa</option>
                  <option value="Dubai">Dubai</option>
                  <option value="Singapore">Singapore</option>
                  <option value="Australia">Australia</option>
                </select>





                <div class="container-text-centre">
                  <table>


                    <thead>
                      <tr>
                        <td class="tab">from</td>
                        <td class="tab">to</td>
                        <td class="tab">date</td>
                        <td class="tab">time</td>
                        <td class="tab">price</td>
                        <td class="tab">Booking</td>
                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                        <td class="tab">{{from}}</td>
                        <td class="tab">{{to}}</td>
                        <td class="tab">{{date}}</td>
                        <td class="tab">{{time}}</td>
                        <td class="tab">{{price}}</td>
                        <td><button class="boo"><a class="nav-link" href="#contactid">Book Now</a></button></td>
                      </tr>
                    </tbody>
                  </table>


                </div>
                <button type="submit" class="btn btn-warning text-white">FIND DETAILS</button>
                <button type="clear" class="btn btn-primary">Clear Form</button>

              </div>
              <!--form-->


          </form>
          <!--form-->
        </div>
      </div>
    </div>
  </div>
  {{!-- hero section ends here--}}

  {{!-- about us start--}}
  {{>about}}
  {{!-- about us ends here--}}

  {{!-- our services start--}}
  {{>service}}
  {{!-- our services ends here--}}

  {{!-- maps start--}}
  {{>maps}}
  {{!-- maps ends here--}}

  {{!-- contact us start--}}
  {{>contact}}
  {{!-- contact us ends here--}}

  {{!--Footer starts here--}}
  {{>footer}}
  {{!--Footer ends here--}}

  <script src="../jq/jquery.js" type="text/javascript"></script>
  <script src="../js/bootstrap.js" type="text/javascript"></script>
</body>

</html>